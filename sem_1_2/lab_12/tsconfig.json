{
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./build",
    "jsx": "react",
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@root/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "tests",
    "src/**/*.test.ts",
    "./**/*.test.ts"
  ]
}

